<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit the payment page to add the "Place Order" button -->
    <template id="place_order_button_checkout" name="Place Order Button on Checkout" inherit_id="website_sale.payment">
        <xpath expr="//div[contains(@class, 'oe_structure')]" position="inside">
            <!-- Adding the custom "Place Order" button -->
            <a href="javascript:void(0);" class="btn btn-primary btn-place-order">Place Order</a> 
            
            <!-- Include necessary JS for the button functionality -->
            <script src="/web/static/lib/jquery/jquery.js"></script>
            <script src="/my_order_module/static/src/js/order_confirmation.js"></script>
        </xpath>
    </template>
</odoo>
